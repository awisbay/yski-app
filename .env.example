# Database
POSTGRES_USER=yski
POSTGRES_PASSWORD=changeme
POSTGRES_DB=yski_db
DATABASE_URL=postgresql+asyncpg://yski:changeme@postgres:5432/yski_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
DONATION_WEBHOOK_SECRET=replace-with-random-webhook-secret
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_URL_BASE=yski://auth/reset-password
PASSWORD_RESET_DEBUG_EXPOSE=false

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=yski-uploads

# App
APP_ENV=development
APP_DEBUG=false
BACKEND_CORS_ORIGINS=["http://localhost:8081", "http://localhost:3000", "http://localhost"]

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=no-reply@yski.local

# First Admin User (for seeding)
ADMIN_EMAIL=admin@yski.org
ADMIN_PASSWORD=replace-with-strong-password
ADMIN_FULL_NAME=System Administrator
